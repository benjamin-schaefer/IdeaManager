<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Idea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.idea_id %></td>
        <td><%= link_to 'Show', idea_comment_path(comment.idea_id, comment) %></td>
        <% if can? :update, comment %>
          <td><%= link_to 'Edit', edit_idea_comment_path(comment.idea_id, comment) %></td>
        <% end %>
        <% if can? :delete, comment %>
          <td><%= link_to 'Destroy', idea_comment_path(comment.idea_id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_idea_comment_path(@idea) %>
