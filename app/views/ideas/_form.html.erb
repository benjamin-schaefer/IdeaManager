<%= form_for @idea, :html => {:multipart => true} do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :picture %>
    <% if @idea.picture.present? %>
       <%= show_idea_image(@idea, width: 150) %>
    <% end %><br>
    <%= f.file_field :picture, accept: "image/*" %> <!--nur Bilddateien anzeigen! (erzeugter html-Code: 'accept="image/*"'-->
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

